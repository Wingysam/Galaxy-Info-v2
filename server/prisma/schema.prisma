generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgres"
  url      = env("prisma_db")
}

enum GalaxyShipClass {
  Admin
  Fighter
  Miner
  Freighter
  Frigate
  Destroyer
  Cruiser
  Battlecruiser
  Battleship
  Dreadnought
  Carrier
  Super_Capital
  Titan
  Alien
}

enum ApiTokenScope {
  ships_read
  ships_read_secret
  ships_read_model
  ships_write
  ships_compute_stats

  turrets_read
  turrets_write

  game_constants_write

  quests_read
  quests_read_fresh
  quests_write

  kills_read

  galaxypedia
}

enum GalaxyEnvironment {
  Galaxy
  Arcade
  Dev
	@@map("QuestCompletionEnvironment")
}

enum QuestCompletionServerType {
  Public
  Private
}

enum CommandShipImagePlacement {
  none
  embed
  upload
}

model Kill {
  id             BigInt   @id
  killer_id      BigInt
  killer_name    String
  killer_ship    String
  killer_class   String
  victim_id      BigInt
  victim_name    String
  victim_ship    String
  victim_class   String
  victim_cost    BigInt
  victim_limited Boolean
  refunded       Boolean
  refunded_override Boolean @default(false)
  refunded_override_history Json[]
  nuke           Boolean
  date           DateTime
}

model User {
  name String @id
  id   BigInt
}

model QuestCompletion {
  completion_id BigInt                     @id
  environment   GalaxyEnvironment
  server_type   QuestCompletionServerType

  username String

  title    String
  quest_id String
  reward   String

  date DateTime
}

model Autorefund {
  refund_id BigInt @id
  environment GalaxyEnvironment

  username String
  payout BigInt
  ship String

  date DateTime
}

model Guild {
  id           BigInt   @id
  last_updated DateTime

  members BigInt[]

  command_ship_image_placement CommandShipImagePlacement?
}

model Channel {
  id    BigInt @id
  guild BigInt

  commands          Boolean?
  admin_event_pings Boolean?
  dps_updates       Boolean?
  permits           Boolean?

  kill_log_enabled         Boolean?
  kill_log_members         Boolean?
  kill_log_include_all Boolean?
  kill_log_custom_users    BigInt[]
  kill_log_embed           Boolean?
  kill_log_pin_limiteds    Boolean?
  kill_log_template_normal String?
  kill_log_template_nuke   String?
  kill_log_daily_stats     Boolean?

  kill_log_bm_kill_classes       GalaxyShipClass[]
  kill_log_limited_kill_classes  GalaxyShipClass[]
  kill_log_bm_death_classes      GalaxyShipClass[]
  kill_log_limited_death_classes GalaxyShipClass[]
}

model ApiToken {
  token  String          @id
  owner  BigInt?
  scopes ApiTokenScope[]
}

model KeyValue {
  key   String @id
  value Json
}
